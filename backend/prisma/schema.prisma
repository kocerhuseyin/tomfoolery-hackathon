generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AuthProvider {
  mock
  tum
}

model User {
  id           String       @id @default(uuid())
  tumId        String?
  email        String       @unique
  fullName     String
  faculty      String?
  semester     Int?
  profileSlug  String       @unique
  authProvider AuthProvider
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
